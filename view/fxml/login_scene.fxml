<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.ilya.ivanov.catty_cathalog.controller.LoginSceneController" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"> 
	<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
		
	<Text text="Welcome to 'Catty' home cathalog" 
	        GridPane.columnIndex="0" GridPane.rowIndex="0"
	        GridPane.columnSpan="2"/>
	
	<Label text="Login:" 
	        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
	 
	<TextField fx:id="loginField" 
	        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
	 
	<Label text="Password:" 
	        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	 
	<PasswordField fx:id="passwordField" 
	        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	        
	<HBox spacing="10" alignment="bottom_right" 
	        GridPane.columnIndex="1" GridPane.rowIndex="4">
	        <Button text="Sign In"     
	        onAction="#handleSubmitButtonAction"/>
	</HBox>
	
	<Text text="Wrong login or password!" fx:id="warningText" fill="RED" visible="false"
			GridPane.columnIndex="0" GridPane.columnSpan="2"
	 		GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
 
</GridPane>

