<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxWidth="800.0" prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.ilya.ivanov.catty_cathalog.controller.MainSceneController">
	<children>

		<AnchorPane prefHeight="45.0" prefWidth="600.0">
			<children>

				<HBox fx:id="controlButtons" alignment="CENTER_LEFT"
					prefHeight="100.0" prefWidth="460.0" spacing="10.0"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="0.0">
					<children>
						<Button fx:id="addButton" onAction="#handleAddButtonAction"
							text="Add" />
						<Button fx:id="deleteButton" onAction="#handleDeleteButtonAction"
							text="Delete" />
						<Button fx:id="retrieveButton" text="Retrieve" />
					</children>
					<padding>
						<Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
					</padding>
				</HBox>

				<HBox alignment="CENTER_RIGHT" layoutX="292.0" layoutY="2.0"
					maxWidth="-Infinity" minWidth="-Infinity" prefHeight="55.0"
					prefWidth="150.0" spacing="7.0" AnchorPane.bottomAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<children>
						<StackPane prefHeight="35.0" prefWidth="26.0">
							<children>
								<Circle fill="#b1baff" radius="16.0" stroke="#2d1fff"
									strokeDashOffset="2.0" strokeType="INSIDE" strokeWidth="0.0"
									style="-fx-stroke-dash-array: 5;" />
								<Text fx:id="userNameLetter" fill="#4c18dd" strokeType="OUTSIDE"
									strokeWidth="0.0" text="G">
									<font>
										<Font name="FreeSerif Bold" size="24.0" />
									</font>
								</Text>
							</children>
						</StackPane>

						<AnchorPane onMouseClicked="#handleSignOut">
							<children>

								<Label layoutX="25.0" layoutY="5.0" text="Sign Out"
									underline="true" />

								<ImageView fitHeight="25.0" fitWidth="25.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@../../resources/sign-out-icon.png" />
									</image>
									<effect>
										<InnerShadow />
									</effect>
								</ImageView>

							</children>
							<cursor>
								<Cursor fx:constant="CLOSED_HAND" />
							</cursor>
							<HBox.margin>
								<Insets bottom="5.0" top="5.0" />
							</HBox.margin>
						</AnchorPane>

					</children>
					<padding>
						<Insets bottom="10.0" right="20.0" top="10.0" />
					</padding>
				</HBox>

			</children>
		</AnchorPane>

		<AnchorPane VBox.vgrow="NEVER">
			<children>

				<TextField fx:id="searchField" layoutX="20.0" layoutY="10.0"
					onAction="#handleSearch"
					promptText="Search" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" HBox.hgrow="ALWAYS">
					<HBox.margin>
						<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
					</HBox.margin>
					<padding>
						<Insets bottom="7.0" left="5.0" right="5.0" top="7.0" />
					</padding>
				</TextField>

			</children>
			<padding>
				<Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
			</padding>
		</AnchorPane>

		<StackPane fx:id="tableStack" VBox.vgrow="ALWAYS">
			<children>

				<VBox fx:id="workingTreeLayout" visible="true" VBox.vgrow="ALWAYS">
					<children>

						<TreeTableView fx:id="workingTreeL__Table"
							prefHeight="100.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
							AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
							AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS">
							<columnResizePolicy>
								<TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
							<columns>
								<TreeTableColumn fx:id="workingTreeT__fileColumn"
									editable="false" minWidth="450.0" prefWidth="450.0" text="File" />
								<TreeTableColumn fx:id="workingTreeT__sizeColumn"
									maxWidth="250.0" minWidth="150.0" prefWidth="150.0" text="Size" />
							</columns>
						</TreeTableView>

						<Label fx:id="workingTreeL__statusBar"
							text="You have 10 MB quota for downloading untill 20.03.2017">
							<VBox.margin>
								<Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
							</VBox.margin>
						</Label>

					</children>
				</VBox>

				<VBox fx:id="searchResultsLayout" prefHeight="200.0" prefWidth="100.0"
					visible="false">
					<children>

						<TableView fx:id="searchL__resultTable" prefHeight="355.0"
							prefWidth="808.0" VBox.vgrow="ALWAYS">
							<columns>
								<TableColumn fx:id="searchT__fileColumn" editable="false"
									minWidth="450.0" prefWidth="450.0" text="File" />
								<TableColumn fx:id="searchT__sizeColumn" editable="false"
									maxWidth="250.0" minWidth="150.0" prefWidth="150.0" text="Size" />
							</columns>

							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>

						</TableView>
						<Pagination fx:id="searchL__paginator"
							maxPageIndicatorCount="5" pageCount="10" prefHeight="39.0"
							prefWidth="600.0" />

					</children>
				</VBox>

			</children>
		</StackPane>

	</children>
</VBox>
